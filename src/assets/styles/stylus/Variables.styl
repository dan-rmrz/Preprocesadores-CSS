fuente1 = 'Lato', sans-serif
fuente2 = 'Oswald', sans-serif

color-principal = #333333;
color-secundario = #8841da;
color-claro = #ffffff;
color-variacion = #3f579a;

cover-image = '../../../assets/static/stylus/cover.jpg'

contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro
  box-shadow: 0px 20px 33px 0px rgba(color-principal,0.2)

opacidad(color, nivel)
  alpha(color, nivel)

for header in 3 2 1
  h{header}
    font-size: 35px - (5 * header)
    margin: 0

titulos(fuente)
  if fuente == fuente1
    font-family: fuente1
  else
    font-family: fuente2
    font-weight: 600
    text-transform: uppercase

*
  box-sizing: border-box

body
  margin: 0
  titulos(fuente1)
  color: color-principal
